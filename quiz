<script>
/* =============================
   CONFIGURAÇÃO
============================= */
const checkoutLink = "https://pay.kiwify.com.br/7FuRjQG";

const questions = [
{
  question:"Você busca uma renda extra?",
  options:[
    {text:"Sim, preciso aumentar minha renda", score:2},
    {text:"Talvez, mas ainda estou pensando", score:1}
  ]
},
{
  question:"Gostaria de trabalhar de casa?",
  options:[
    {text:"Sim, seria perfeito pra mim", score:2},
    {text:"Não é prioridade", score:0}
  ]
},
{
  question:"Você já pensou em vender roupas online?",
  options:[
    {text:"Sim, várias vezes", score:2},
    {text:"Nunca pensei nisso", score:0}
  ]
},
{
  question:"Quanto gostaria de ganhar por mês?",
  options:[
    {text:"R$1.000 a R$3.000", score:2},
    {text:"Qualquer valor extra já ajuda", score:1}
  ]
},
{
  question:"Você tem roupas paradas no guarda-roupa?",
  options:[
    {text:"Sim, muitas peças", score:2},
    {text:"Poucas peças", score:1}
  ]
},
{
  question:"Você gostaria de começar com pouco investimento?",
  options:[
    {text:"Sim, não quero gastar muito", score:2},
    {text:"Posso investir alto", score:0}
  ]
}
];

let currentQuestion = 0;
let totalScore = 0;

/* =============================
   FUNÇÕES
============================= */

function startQuiz(){
  document.getElementById("start").classList.add("hidden");
  document.getElementById("quiz").classList.remove("hidden");
  showQuestion();
}

function showQuestion(){
  const container = document.getElementById("question-container");
  container.innerHTML = "";

  let q = questions[currentQuestion];

  let title = document.createElement("h2");
  title.innerText = q.question;
  container.appendChild(title);

  q.options.forEach(option=>{
    let btn = document.createElement("button");
    btn.classList.add("btn","btn-option");
    btn.innerText = option.text;
    btn.onclick = ()=>{
      totalScore += option.score;
      nextQuestion();
    };
    container.appendChild(btn);
  });

  updateProgress();
}

function nextQuestion(){
  currentQuestion++;
  if(currentQuestion < questions.length){
    showQuestion();
  } else {
    showResult();
  }
}

function updateProgress(){
  let percent = ((currentQuestion)/questions.length)*100;
  document.getElementById("progress").style.width = percent+"%";
}

function showResult(){
  document.getElementById("quiz").classList.add("hidden");
  document.getElementById("result").classList.remove("hidden");

  let result = document.getElementById("result");

  let message = "";

  if(totalScore >= 10){
    message = "<h2>Você tem grande potencial para lucrar com um Brechó Online</h2>";
  } else {
    message = "<h2>Você pode transformar roupas esquecidas em uma nova fonte de renda</h2>";
  }

  result.innerHTML = `
  ${message}
  <p>Muitas pessoas começam apenas querendo renda extra… e descobrem uma forma real de empreender sem loja física e sem alto investimento.</p>
  <ul>
    <li>✔ Comece com peças que você já tem</li>
    <li>✔ Trabalhe de casa</li>
    <li>✔ Baixo investimento inicial</li>
    <li>✔ Estratégias simples e práticas</li>
  </ul>

  <div class="countdown">Bônus disponível por: <span id="timer">05:00</span></div>

  <button class="btn btn-primary" onclick="goCheckout()">Quero Começar Meu Brechó Online</button>

  <hr style="margin:25px 0; border-color:#222">

  <h3>Garantia simbólica</h3>
  <p>Se você aplicar o conteúdo e não enxergar clareza para começar, o risco é praticamente zero comparado ao potencial de retorno.</p>

  <p><strong>Investimento: R$ 19,99</strong></p>
  `;

  startCountdown();
}

function goCheckout(){
  window.location.href = checkoutLink;
}

/* CONTADOR */
function startCountdown(){
  let time = 300;
  let timerElement = document.getElementById("timer");

  let interval = setInterval(()=>{
    let minutes = Math.floor(time/60);
    let seconds = time%60;
    seconds = seconds < 10 ? "0"+seconds : seconds;
    timerElement.innerText = minutes+":"+seconds;
    time--;

    if(time < 0){
      clearInterval(interval);
      timerElement.innerText = "00:00";
    }
  },1000);
}

/* POPUP SAÍDA */
document.addEventListener("mouseout", function(e){
  if(e.clientY < 0){
    document.getElementById("exitPopup").style.display="flex";
  }
});

function closePopup(){
  document.getElementById("exitPopup").style.display="none";
}

</script>

</body>
</html>
